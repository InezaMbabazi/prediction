from sklearn.linear_model import LinearRegression
import joblib
import pandas as pd

# Example dataset (replace with your own)
data = pd.DataFrame({
    'High_School_Grade': [75, 88, 95, 67, 80],
    'Entry_Exam_Score': [70, 85, 92, 65, 78],
    'Current_Marks': [78, 89, 95, 68, 82]
})

# Features (input) and Target (output)
X = data[['High_School_Grade', 'Entry_Exam_Score']]
y = data['Current_Marks']

# Train the model
model = LinearRegression()
model.fit(X, y)

# Save the trained model to a .pkl file
joblib.dump(model, 'student_model.pkl')
